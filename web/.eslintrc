parser: babel-eslint
plugins:
  - standard
  - jest
rules:
  no-var: error
  no-console: off
  semi: [error, never]
  quotes: [error, single]
  lines-between-class-members: error
  react/prop-types: error
  react/jsx-key: error
  react/no-did-mount-set-state: error
  react/no-did-update-set-state: error
  react/no-deprecated: error
extends:
  - eslint:recommended
  - plugin:react/recommended
settings:
  react:
    version: "16.13"
env:
  jest/globals: true
  browser: true
  es6: true
  node: true
